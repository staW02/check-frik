                ],
                'phone': [
                    { title: 'Telegram Russia 2023', type: 'warning', details: 'Номера телефонов пользователей Telegram', severity: 'Средняя', records: '33 млн записей' },
                    { title: 'Avito Phones 2023', type: 'danger', details: 'Номера телефонов с объявлений Avito', severity: 'Высокая', records: '15 млн записей' },
                    { title: 'Russian Banks Combined', type: 'danger', details: 'Телефоны из банковских баз данных', severity: 'Критическая', records: '25 млн записей' }
                ],
                'username': [
                    { title: 'Social Networks Leak', type: 'warning', details: 'Имя пользователя найдено в утечке социальных сетей', severity: 'Средняя', records: '67 млн записей' },
                    { title: 'Gaming Platforms Leak', type: 'info', details: 'Аккаунты игровых платформ', severity: 'Низкая', records: '2 млн записей' },
                    { title: 'Forum Database Leak', type: 'warning', details: 'База данных форума', severity: 'Средняя', records: '800 тыс записей' }
                ],
                'ip': [
                    { title: 'Threat Intelligence Feed', type: 'danger', details: 'IP адрес в списке угроз безопасности', severity: 'Высокая', records: '1.2 млн записей' },
                    { title: 'Malware Distribution', type: 'warning', details: 'IP использовался для распространения вредоносного ПО', severity: 'Средняя', records: '450 тыс записей' },
                    { title: 'DDoS Attacks', type: 'danger', details: 'IP участвовал в DDoS атаках', severity: 'Критическая', records: '150 тыс записей' }
                ],
                'domain': [
                    { title: 'Phishing Domain Database', type: 'danger', details: 'Домен использовался для фишинговых атак', severity: 'Высокая', records: '800 тыс записей' },
                    { title: 'Malware Hosting', type: 'warning', details: 'Домен использовался для хостинга вредоносного ПО', severity: 'Средняя', records: '350 тыс записей' },
                    { title: 'Spam Domain List', type: 'info', details: 'Домен в списке рассылки спама', severity: 'Низкая', records: '1.5 млн записей' }
                ]
            };
            
            const breaches = breachesByType[type] || breachesByType['email'];
            return breaches[Math.floor(Math.random() * breaches.length)];
        }
        
        // Получение класса для бейджа
        function getBadgeClass(type) {
            switch(type) {
                case 'danger': return 'badge-danger';
                case 'warning': return 'badge-warning';
                case 'info': return 'badge-info';
                default: return 'badge-success';
            }
        }
        
