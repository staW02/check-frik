    <script>
        // Глобальные переменные
        let currentSection = 'check';
        let currentTab = 'email-tab';
        let databases = [];
        let breaches = [];
        let tools = [];
        let checkInProgress = false;
        
        // Инициализация при загрузке страницы
        document.addEventListener('DOMContentLoaded', function() {
            // Загрузка данных
            loadDatabases();
            loadBreaches();
            loadTools();
            
            // Инициализация скролла
            initScroll();
            
            // Инициализация генератора паролей
            generatePassword();
            
            // Показ первой секции
            showSection('check');
            
            // Анимация статистики
            animateStats();
            
            // Инициализация ИИ помощника
            initAI();
            
            // Настройка маски телефона
            setupPhoneMask();
        });
        
        // Настройка маски телефона
        function setupPhoneMask() {
            const phoneInput = document.getElementById('phone-input');
            if (phoneInput) {
                phoneInput.addEventListener('input', function(e) {
                    let x = e.target.value.replace(/\D/g, '').match(/(\d{0,3})(\d{0,3})(\d{0,2})(\d{0,2})/);
                    e.target.value = !x[2] ? x[1] : '(' + x[1] + ') ' + x[2] + (x[3] ? '-' + x[3] : '') + (x[4] ? '-' + x[4] : '');
                });
            }
        }
        
        // Функция для переключения боковой панели
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const body = document.body;
            const menuToggle = document.getElementById('menuToggle');
            
            sidebar.classList.toggle('open');
            body.classList.toggle('sidebar-open');
            
            // Скрываем кнопку меню когда панель открыта
            if (sidebar.classList.contains('open')) {
                menuToggle.classList.add('hidden');
            } else {
                menuToggle.classList.remove('hidden');
            }
        }
        
        // Функция для скрытия боковой панели
        function hideSidebar() {
            const sidebar = document.getElementById('sidebar');
            const body = document.body;
            const menuToggle = document.getElementById('menuToggle');
            
            sidebar.classList.remove('open');
            body.classList.remove('sidebar-open');
            menuToggle.classList.remove('hidden');
        }
        
        // Функция для переключения между разделами
        function showSection(sectionId) {
            // Скрываем все секции
            document.querySelectorAll('.section-content').forEach(section => {
                section.classList.remove('active');
            });
            
            // Убираем активный класс у всех пунктов меню
            document.querySelectorAll('.menu-item').forEach(item => {
                item.classList.remove('active');
            });
            
            // Показываем выбранную секцию
            const section = document.getElementById(sectionId);
            if (section) {
                section.classList.add('active');
                currentSection = sectionId;
                
                // Добавляем активный класс к соответствующему пункту меню
                document.querySelectorAll('.menu-item').forEach(item => {
                    if (item.textContent.includes(getSectionName(sectionId))) {
                        item.classList.add('active');
                    }
                });
                
                // Прокручиваем к началу секции
                section.scrollIntoView({ behavior: 'smooth' });
                
                // Скрываем боковую панель на мобильных устройствах
                if (window.innerWidth <= 768) {
                    hideSidebar();
                }
                
                // Обновляем статистику для определенных разделов
                if (sectionId === 'databases') {
                    updateDatabaseStats();
                } else if (sectionId === 'breaches') {
                    updateBreachStats();
                }
            }
        }
        
        // Вспомогательная функция для получения имени раздела
        function getSectionName(sectionId) {
            const sectionNames = {
                'check': 'Проверка данных',
                'databases': 'Базы данных',
                'breaches': 'Известные утечки',
                'tools': 'OSINT инструменты',
                'ai': 'ИИ помощник',
                'anonymity': 'Анонимность',
                'password': 'Генератор паролей',
                'encryption': 'Шифрование',
                'admin': 'Админ панель',
                'settings': 'Настройки',
                'help': 'Помощь'
            };
            
            return sectionNames[sectionId] || sectionId;
        }
        
        // Функция для переключения между вкладками
        function showTab(tabId) {
            // Убираем активный класс у всех кнопок вкладок
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Скрываем все вкладки
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Показываем выбранную вкладку
            const tab = document.getElementById(tabId);
            if (tab) {
                tab.classList.add('active');
                currentTab = tabId;
                
                // Добавляем активный класс к соответствующей кнопке
                document.querySelectorAll('.tab-btn').forEach(btn => {
                    if (btn.textContent.includes(getTabName(tabId))) {
                        btn.classList.add('active');
                    }
                });
            }
        }
        
        // Вспомогательная функция для получения имени вкладки
        function getTabName(tabId) {
            const tabNames = {
                'email-tab': 'Email',
                'phone-tab': 'Телефон',
                'username-tab': 'Имя пользователя',
                'ip-tab': 'IP адрес',
                'domain-tab': 'Домен'
            };
            
            return tabNames[tabId] || tabId;
        }
        
        // Функция для проверки email
        function checkEmail() {
            if (checkInProgress) {
                showNotification('Пожалуйста, дождитесь завершения текущей проверки', 'warning');
                return;
            }
            
            const emailInput = document.getElementById('email-input');
            const email = emailInput.value.trim();
            
            if (!email || !isValidEmail(email)) {
                showNotification('Пожалуйста, введите корректный email адрес', 'error');
                emailInput.focus();
                return;
            }
            
            checkInProgress = true;
            startCheck('email', email, 'Проверка email адреса');
        }
        
        // Функция для проверки телефона
        function checkPhone() {
            if (checkInProgress) {
                showNotification('Пожалуйста, дождитесь завершения текущей проверки', 'warning');
                return;
            }
            
            const phoneInput = document.getElementById('phone-input');
            let phone = phoneInput.value.trim();
            
            // Очищаем номер от скобок и дефисов
            phone = phone.replace(/[\(\)\-\s]/g, '');
            
            if (!phone || phone.length < 10) {
                showNotification('Пожалуйста, введите корректный номер телефона', 'error');
                phoneInput.focus();
                return;
            }
            
            const fullPhone = '+7' + phone;
            checkInProgress = true;
            startCheck('phone', fullPhone, 'Проверка номера телефона');
        }
        
        // Функция для проверки имени пользователя
        function checkUsername() {
            if (checkInProgress) {
                showNotification('Пожалуйста, дождитесь завершения текущей проверки', 'warning');
                return;
            }
            
            const usernameInput = document.getElementById('username-input');
            const username = usernameInput.value.trim();
            
            if (!username) {
                showNotification('Пожалуйста, введите имя пользователя', 'error');
                usernameInput.focus();
                return;
            }
            
            checkInProgress = true;
            startCheck('username', username, 'Проверка имени пользователя');
        }
        
        // Функция для проверки IP
        function checkIP() {
            if (checkInProgress) {
                showNotification('Пожалуйста, дождитесь завершения текущей проверки', 'warning');
                return;
            }
            
            const ipInput = document.getElementById('ip-input');
            const ip = ipInput.value.trim();
            
            if (!ip || !isValidIP(ip)) {
                showNotification('Пожалуйста, введите корректный IP адрес', 'error');
                ipInput.focus();
                return;
            }
            
            checkInProgress = true;
            startCheck('ip', ip, 'Проверка IP адреса');
        }
        
        // Функция для проверки домена
        function checkDomain() {
            if (checkInProgress) {
                showNotification('Пожалуйста, дождитесь завершения текущей проверки', 'warning');
                return;
            }
            
            const domainInput = document.getElementById('domain-input');
            const domain = domainInput.value.trim().toLowerCase();
            
            if (!domain || !isValidDomain(domain)) {
                showNotification('Пожалуйста, введите корректный домен', 'error');
                domainInput.focus();
                return;
            }
            
            checkInProgress = true;
            startCheck('domain', domain, 'Проверка домена');
        }
        
        // Основная функция запуска проверки
        function startCheck(type, value, title) {
            // Сбрасываем результаты предыдущей проверки
            resetResults();
            
            // Устанавливаем заголовок
            document.getElementById('result-title').textContent = title;
            document.getElementById('result-status').textContent = 'Проверка...';
            document.getElementById('result-status').className = 'result-status status-info';
            
            // Показываем прогресс-бар
            const progressContainer = document.getElementById('progress-container');
            const progressFill = document.getElementById('progress-fill');
            const progressText = document.getElementById('progress-text');
            
            progressContainer.style.display = 'block';
            progressFill.style.width = '0%';
            progressText.textContent = 'Подготовка к проверке...';
            
            // Показываем результаты
            const results = document.getElementById('results');
            results.classList.add('active');
            results.scrollIntoView({ behavior: 'smooth' });
            
            // Запускаем симуляцию проверки
            simulateCheck(type, value, progressFill, progressText);
        }
        
        // Симуляция проверки
        function simulateCheck(type, value, progressFill, progressText) {
            let progress = 0;
            const totalSteps = 10;
            const stepDuration = 300;
            
            const progressInterval = setInterval(() => {
                progress += 10;
                progressFill.style.width = progress + '%';
                
                // Обновляем текст прогресса
                const stepTexts = [
                    'Подключение к базам данных...',
                    'Проверка социальных сетей...',
                    'Анализ государственных баз...',
                    'Сканирование коммерческих баз...',
                    'Поиск в утечках данных...',
                    'Проверка darknet источников...',
                    'Анализ финансовых баз...',
                    'Международные базы данных...',
                    'Обработка результатов...',
                    'Формирование отчета...'
                ];
                
                const stepIndex = Math.floor(progress / 10) - 1;
                if (stepIndex >= 0 && stepIndex < stepTexts.length) {
                    progressText.textContent = stepTexts[stepIndex];
                }
                
                if (progress >= 100) {
                    clearInterval(progressInterval);
                    // Завершаем проверку
                    completeCheck(type, value);
                }
            }, stepDuration);
        }
        
        // Завершение проверки
        function completeCheck(type, value) {
            // Скрываем прогресс-бар
            document.getElementById('progress-container').style.display = 'none';
            
            // Генерируем результаты
            const results = generateCheckResults(type, value);
            
            // Обновляем интерфейс
            updateResultsUI(results);
            
            // Показываем уведомление
            const notificationType = results.foundBreaches > 0 ? 'error' : 'success';
            const notificationMessage = results.foundBreaches > 0 ? 
                `Найдено ${results.foundBreaches} утечек данных` : 
                'Проверка завершена, утечек не найдено';
            
            showNotification(notificationMessage, notificationType);
            
            // Разрешаем новую проверку
            checkInProgress = false;
        }
        
        // Генерация результатов проверки
        function generateCheckResults(type, value) {
            // Случайные результаты для демонстрации
            const isLeaked = Math.random() > 0.4; // 60% шанс что данные утекли
            const leakCount = isLeaked ? Math.floor(Math.random() * 8) + 1 : 0;
            const databasesChecked = Math.floor(Math.random() * 150) + 200; // 200-350 баз
            const checkTime = (Math.random() * 3 + 1).toFixed(2);
            
            let detailsHTML = '';
            let breachesHTML = '';
            
            // Генерация деталей в зависимости от типа проверки
            switch(type) {
                case 'email':
                    detailsHTML = `
                        <div class="detail-item">
                            <span class="detail-label">Проверенный email:</span>
                            <span class="detail-value">${value}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Базы данных проверено:</span>
                            <span class="detail-value">${databasesChecked} из 350+</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Найдено утечек:</span>
                            <span class="detail-value">${leakCount}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Первая утечка:</span>
                            <span class="detail-value">${leakCount > 0 ? getRandomDate() : 'Не обнаружено'}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Время проверки:</span>
                            <span class="detail-value">${checkTime} секунд</span>
                        </div>
                    `;
                    break;
                    
                case 'phone':
                    detailsHTML = `
                        <div class="detail-item">
                            <span class="detail-label">Проверенный телефон:</span>
                            <span class="detail-value">${value}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Оператор связи:</span>
                            <span class="detail-value">${getRandomMobileOperator()}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Регион:</span>
                            <span class="detail-value">${getRandomRussianRegion()}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Базы данных проверено:</span>
                            <span class="detail-value">${databasesChecked} из 350+</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Найдено упоминаний:</span>
                            <span class="detail-value">${leakCount}</span>
                        </div>
                    `;
                    break;
                    
                case 'username':
                    const platformsFound = Math.floor(Math.random() * 6) + (leakCount > 0 ? 1 : 0);
                    detailsHTML = `
                        <div class="detail-item">
                            <span class="detail-label">Имя пользователя:</span>
                            <span class="detail-value">${value}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Найдено на платформах:</span>
                            <span class="detail-value">${platformsFound}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Социальные сети:</span>
                            <span class="detail-value">${Math.floor(platformsFound / 2)}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Утечек данных:</span>
                            <span class="detail-value">${leakCount}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Дата регистрации:</span>
                            <span class="detail-value">${getRandomPastDate()}</span>
                        </div>
                    `;
                    break;
                    
                case 'ip':
                    const threatsFound = Math.floor(Math.random() * 3);
                    detailsHTML = `
                        <div class="detail-item">
                            <span class="detail-label">IP адрес:</span>
                            <span class="detail-value">${value}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Страна:</span>
                            <span class="detail-value">${getRandomCountry()}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Провайдер:</span>
                            <span class="detail-value">${getRandomISP()}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Угроз обнаружено:</span>
                            <span class="detail-value">${threatsFound}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Статус:</span>
                            <span class="detail-value">${threatsFound > 0 ? 'Подозрительный' : 'Безопасный'}</span>
                        </div>
                    `;
                    break;
                    
                case 'domain':
                    const subdomainsFound = Math.floor(Math.random() * 5);
                    const domainAge = Math.floor(Math.random() * 10) + 1;
                    detailsHTML = `
                        <div class="detail-item">
                            <span class="detail-label">Домен:</span>
                            <span class="detail-value">${value}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Регистратор:</span>
                            <span class="detail-value">${getRandomRegistrar()}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Возраст домена:</span>
                            <span class="detail-value">${domainAge} лет</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Поддомены:</span>
                            <span class="detail-value">${subdomainsFound}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Угрозы безопасности:</span>
                            <span class="detail-value">${leakCount}</span>
                        </div>
                    `;
                    break;
            }
            
            // Генерация списка утечек
            if (leakCount > 0) {
                breachesHTML = '<h4 style="margin-top: 20px;">Обнаруженные утечки:</h4>';
                
                for (let i = 0; i < leakCount; i++) {
                    const breach = generateRandomBreach(type);
                    breachesHTML += `
                        <div class="breach-item ${breach.type}">
                            <div class="breach-title">${breach.title} <span class="results-badge ${getBadgeClass(breach.type)}">${breach.severity}</span></div>
                            <div class="breach-details">${breach.details}</div>
                            <div class="breach-date">Обнаружено: ${breach.date} • Записей: ${breach.records}</div>
                        </div>
                    `;
                }
                
                // Добавляем рекомендации
                breachesHTML += `
                    <div class="breach-item info">
                        <div class="breach-title">Рекомендации по безопасности</div>
                        <div class="breach-details">
                            ${getSecurityRecommendations(type, leakCount)}
                        </div>
                    </div>
                `;
            } else {
                breachesHTML = `
                    <div class="breach-item safe">
                        <div class="breach-title">Безопасно!</div>
                        <div class="breach-details">
                            ${getSafeMessage(type)}<br><br>
                            <strong>Рекомендации для поддержания безопасности:</strong><br>
                            1. Регулярно меняйте пароли<br>
                            2. Используйте двухфакторную аутентификацию<br>
                            3. Остерегайтесь фишинговых атак<br>
                            4. Обновляйте программное обеспечение
                        </div>
                    </div>
                `;
            }
            
            return {
                type: type,
                value: value,
                foundBreaches: leakCount,
                status: leakCount > 3 ? 'Утечка данных' : (leakCount > 0 ? 'Частично утекло' : 'Безопасно'),
                statusClass: leakCount > 3 ? 'status-leaked' : (leakCount > 0 ? 'status-warning' : 'status-safe'),
                detailsHTML: detailsHTML,
                breachesHTML: breachesHTML
            };
        }
        
        // Обновление интерфейса с результатами
        function updateResultsUI(results) {
            // Обновляем статус
            document.getElementById('result-status').textContent = results.status;
            document.getElementById('result-status').className = `result-status ${results.statusClass}`;
            
            // Обновляем детали
            document.getElementById('result-details').innerHTML = results.detailsHTML;
            
            // Обновляем список утечек
            document.getElementById('breach-list').innerHTML = results.breachesHTML;
        }
        
        // Сброс результатов
        function resetResults() {
            document.getElementById('result-details').innerHTML = '';
            document.getElementById('breach-list').innerHTML = '';
        }
        
