                    const type = databaseTypes[Math.floor(Math.random() * databaseTypes.length)];
                    const name = databaseNames[i % databaseNames.length] + ` #${Math.floor(Math.random() * 1000)}`;
                    const description = getDatabaseDescription(type);
                    const records = Math.floor(Math.random() * 10000000) + 1000000;
                    const online = Math.random() > 0.1;
                    
                    databases.push({
                        id: i + 1,
                        name: name,
                        type: type,
                        description: description,
                        records: records.toLocaleString(),
                        online: online,
                        verified: Math.random() > 0.3,
                        country: getRandomCountry(),
                        updated: getRandomTimeAgo()
                    });
