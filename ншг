            return regions[Math.floor(Math.random() * regions.length)];
        }
        
        // Получение случайного интернет-провайдера
        function getRandomISP() {
            const isps = ['Ростелеком', 'МТС', 'Билайн', 'МегаФон', 'Транстелеком', 'ЭР-Телеком', 'Дом.ru'];
            return isps[Math.floor(Math.random() * isps.length)];
        }
        
        // Получение случайного регистратора доменов
        function getRandomRegistrar() {
            const registrars = ['RU-CENTER', 'Reg.ru', 'Nic.ru', 'GoDaddy', 'Namecheap', 'Google Domains'];
            return registrars[Math.floor(Math.random() * registrars.length)];
        }
        
        // Закрытие модальных окон при клике вне контента
        document.addEventListener('click', function(event) {
            const adminModal = document.getElementById('admin-modal');
            const tipModal = document.getElementById('tip-modal');
            const helpModal = document.getElementById('help-modal');
            
            if (adminModal.classList.contains('active') && !adminModal.querySelector('.modal-content').contains(event.target)) {
                closeAdminModal();
            }
            
            if (tipModal.classList.contains('active') && !tipModal.querySelector('.modal-content').contains(event.target)) {
                closeTipModal();
            }
            
            if (helpModal.classList.contains('active') && !helpModal.querySelector('.modal-content').contains(event.target)) {
                closeHelpModal();
            }
        });
        
        // Закрытие модальных окон при нажатии ESC
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeAdminModal();
                closeTipModal();
                closeHelpModal();
            }
        });
        
        // Анимация при загрузке страницы
        window.addEventListener('load', function() {
            document.body.style.opacity = '0';
            document.body.style.transition = 'opacity 0.5s';
            
            setTimeout(() => {
                document.body.style.opacity = '1';
            }, 100);
        });
    </script>
</body>
</html>
