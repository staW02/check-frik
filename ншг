        }
        
        // Получение сообщения о безопасности
        function getSafeMessage(type) {
            const messages = {
                'email': 'Ваш email адрес не найден в известных утечках данных.',
                'phone': 'Ваш номер телефона не найден в известных утечках данных.',
                'username': 'Имя пользователя не найдено в известных утечках данных.',
                'ip': 'IP адрес не содержит известных угроз безопасности.',
                'domain': 'Домен не содержит известных угроз безопасности.'
            };
            
            return messages[type] || 'Данные не найдены в известных утечках.';
        }
        
        // Получение случайной даты
        function getRandomDate() {
            const start = new Date(2018, 0, 1);
            const end = new Date();
            const date = new Date(start.getTime() + Math.random() * (end.getTime() - start.getTime()));
            return date.toLocaleDateString('ru-RU');
        }
        
        // Получение случайной даты в прошлом
        function getRandomPastDate() {
            const yearsAgo = Math.floor(Math.random() * 5) + 1;
            const date = new Date();
            date.setFullYear(date.getFullYear() - yearsAgo);
            date.setMonth(Math.floor(Math.random() * 12));
            date.setDate(Math.floor(Math.random() * 28) + 1);
            return date.toLocaleDateString('ru-RU');
        }
        
        // Получение случайного времени назад
        function getRandomTimeAgo() {
            const times = ['5 минут назад', '15 минут назад', '1 час назад', '3 часа назад', 'сегодня', 'вчера', '2 дня назад'];
            return times[Math.floor(Math.random() * times.length)];
        }
        
        // Получение описания базы данных по типу
        function getDatabaseDescription(type) {
            const descriptions = {
                'social': 'База данных социальных сетей и платформ',
                'government': 'Государственные реестры и базы данных',
                'commercial': 'Коммерческие базы данных компаний',
                'leaked': 'Утечки данных из различных источников',
                'darknet': 'Данные из darknet источников',
                'financial': 'Финансовые данные и транзакции',
                'international': 'Международные базы данных'
            };
            
            return descriptions[type] || 'База данных';
        }
        
        // Получение случайной страны
        function getRandomCountry() {
