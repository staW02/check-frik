        // Функция для фильтрации утечек
        function filterBreaches() {
            const searchInput = document.getElementById('breach-search');
            const searchTerm = searchInput.value.toLowerCase();
            const breachesList = document.getElementById('breaches-list');
            
            const filtered = breaches.filter(breach => 
                breach.title.toLowerCase().includes(searchTerm) || 
                breach.details.toLowerCase().includes(searchTerm) ||
                breach.date.includes(searchTerm)
            );
            
            breachesList.innerHTML = '';
            
            filtered.forEach(breach => {
                const breachItem = document.createElement('div');
                breachItem.className = `breach-item ${breach.type}`;
                breachItem.innerHTML = `
                    <div class="breach-title">${breach.title} <span class="results-badge ${getBadgeClass(breach.type)}">${breach.severity}</span></div>
                    <div class="breach-details">${breach.details}</div>
                    <div class="detail-item">
                        <span class="detail-label">Записей:</span>
                        <span class="detail-value">${breach.records}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Год утечки:</span>
                        <span class="detail-value">${breach.date}</span>
                    </div>
                    <div class="breach-date">ID утечки: #${breach.id.toString().padStart(3, '0')}</div>
                `;
                
                breachesList.appendChild(breachItem);
            });
        }
        
        // Функция для фильтрации утечек по году
        function filterBreachesByYear(year) {
            const filterButtons = document.querySelectorAll('.database-filter .filter-btn');
            filterButtons.forEach(btn => btn.classList.remove('active'));
            
            event.target.classList.add('active');
            
            const breachesList = document.getElementById('breaches-list');
            let filtered = [];
            
            if (year === 'all') {
                filtered = breaches;
            } else if (year === 'before') {
                filtered = breaches.filter(breach => parseInt(breach.date) < 2020);
            } else {
                filtered = breaches.filter(breach => breach.date.includes(year));
            }
            
            breachesList.innerHTML = '';
            
            filtered.forEach(breach => {
                const breachItem = document.createElement('div');
                breachItem.className = `breach-item ${breach.type}`;
                breachItem.innerHTML = `
                    <div class="breach-title">${breach.title} <span class="results-badge ${getBadgeClass(breach.type)}">${breach.severity}</span></div>
                    <div class="breach-details">${breach.details}</div>
                    <div class="detail-item">
                        <span class="detail-label">Записей:</span>
                        <span class="detail-value">${breach.records}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Год утечки:</span>
                        <span class="detail-value">${breach.date}</span>
                    </div>
                    <div class="breach-date">ID утечки: #${breach.id.toString().padStart(3, '0')}</div>
                `;
                
                breachesList.appendChild(breachItem);
