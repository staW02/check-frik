        // Функция для отображения баз данных
        function renderDatabases(dbList) {
            const databasesGrid = document.getElementById('databases-grid');
            
            if (!databasesGrid) return;
            
            databasesGrid.innerHTML = '';
            
            dbList.forEach(db => {
                const dbCard = document.createElement('div');
                dbCard.className = 'database-card';
                dbCard.setAttribute('data-type', db.type);
                dbCard.innerHTML = `
                    <div class="database-status ${db.online ? 'status-online' : 'status-offline'}"></div>
                    <h3>${db.name}</h3>
                    <p>${db.description}</p>
                    <div class="detail-item">
                        <span class="detail-label">Записей:</span>
                        <span class="detail-value">${db.records}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Страна:</span>
                        <span class="detail-value">${db.country}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Обновление:</span>
                        <span class="detail-value">${db.updated}</span>
                    </div>
                    ${db.verified ? '<div class="database-verified"><i class="fas fa-check-circle"></i> Проверено</div>' : ''}
                `;
                
                databasesGrid.appendChild(dbCard);
            });
        }
        
        // Функция для фильтрации баз данных
        function filterDatabases() {
            const searchInput = document.getElementById('database-search');
            const searchTerm = searchInput.value.toLowerCase();
            
            const filtered = databases.filter(db => 
                db.name.toLowerCase().includes(searchTerm) || 
                db.description.toLowerCase().includes(searchTerm) ||
                db.type.toLowerCase().includes(searchTerm) ||
                db.country.toLowerCase().includes(searchTerm)
            );
            
            renderDatabases(filtered);
        }
        
        // Функция для фильтрации по типу
        function filterByType(type) {
            const filterButtons = document.querySelectorAll('.filter-btn');
            filterButtons.forEach(btn => btn.classList.remove('active'));
            
            event.target.classList.add('active');
            
            if (type === 'all') {
                renderDatabases(databases);
            } else {
                const filtered = databases.filter(db => db.type === type);
                renderDatabases(filtered);
            }
        }
        
