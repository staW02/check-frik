        // Функция для показа уведомлений
        function showNotification(message, type = 'info') {
            const notification = document.getElementById('notification');
            const notificationText = document.getElementById('notification-text');
            
            // Устанавливаем текст и тип уведомления
            notificationText.textContent = message;
            notification.className = `notification ${type}`;
            
            // Меняем иконку в зависимости от типа
            const icon = notification.querySelector('i');
            if (type === 'success') {
                icon.className = 'fas fa-check-circle';
            } else if (type === 'error') {
                icon.className = 'fas fa-exclamation-circle';
            } else if (type === 'warning') {
                icon.className = 'fas fa-exclamation-triangle';
            } else {
                icon.className = 'fas fa-info-circle';
            }
            
            // Показываем уведомление
            notification.classList.add('show');
            
            // Автоматически скрываем через 5 секунд
            setTimeout(() => {
                notification.classList.remove('show');
            }, 5000);
        }
        
        // Функция для обновления баз данных
        function updateDatabases() {
            showNotification('Запущено обновление статуса баз данных...', 'info');
            
            setTimeout(() => {
                // Обновляем статусы случайным образом
                databases.forEach(db => {
                    if (Math.random() > 0.2) { // 80% шанс что база онлайн
                        db.online = true;
                    } else {
                        db.online = false;
                    }
                    db.updated = getRandomTimeAgo();
                });
                
                // Перерисовываем базы данных
                renderDatabases(databases);
                
                showNotification('Статус баз данных обновлен!', 'success');
            }, 2000);
        }
        
        // Функция для показа системной статистики
        function showSystemStats() {
            showNotification('Подробная системная статистика в разработке', 'warning');
        }
        
        // Функция для показа логов безопасности
        function showSecurityLog() {
            showNotification('Логи безопасности доступны в полной версии', 'warning');
        }
        
        // Функция для смены темы
        function changeTheme(theme) {
            showNotification(`Тема изменена на: ${theme}`, 'success');
            // В реальном приложении здесь бы менялись CSS переменные
        }
        
        // Функция для сохранения настроек
        function saveSettings() {
            showNotification('Настройки успешно сохранены!', 'success');
        }
        
        // Функция для переключения полноэкранного режима
        function toggleFullscreen() {
            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen().catch(err => {
                    showNotification(`Ошибка при включении полноэкранного режима: ${err.message}`, 'error');
                });
            } else {
                if (document.exitFullscreen) {
                    document.exitFullscreen();
                }
            }
        }
        
        // Функция для анимации статистики
        function animateStats() {
            // Анимация счетчиков
            const counters = [
                { element: 'databaseCount', target: 358, suffix: '+' },
                { element: 'breachCount', target: 127, suffix: 'M+' },
                { element: 'toolCount', target: 45, suffix: '+' },
                { element: 'aiQueries', target: 999, suffix: '+' }
            ];
            
            counters.forEach(counter => {
                const element = document.getElementById(counter.element);
                if (element) {
                    let current = 0;
                    const increment = counter.target / 100;
                    const timer = setInterval(() => {
                        current += increment;
                        if (current >= counter.target) {
                            element.textContent = counter.target + counter.suffix;
                            clearInterval(timer);
                        } else {
                            element.textContent = Math.floor(current) + counter.suffix;
                        }
                    }, 20);
                }
            });
        }
        
        // Функция для обновления статистики баз данных
        function updateDatabaseStats() {
            if (databases.length > 0) {
                const onlineCount = databases.filter(db => db.online).length;
                document.getElementById('databaseCount').textContent = `${onlineCount}/${databases.length}`;
            }
        }
        
        // Функция для обновления статистики утечек
        function updateBreachStats() {
            if (breaches.length > 0) {
                // Подсчет общего количества записей (примерный)
                let totalRecords = 0;
                breaches.forEach(breach => {
                    const recordsText = breach.records;
                    if (recordsText.includes('млрд')) {
                        totalRecords += parseFloat(recordsText) * 1000000000;
                    } else if (recordsText.includes('млн')) {
                        totalRecords += parseFloat(recordsText) * 1000000;
                    } else if (recordsText.includes('тыс')) {
                        totalRecords += parseFloat(recordsText) * 1000;
                    } else {
                        totalRecords += parseFloat(recordsText.replace(/\D/g, ''));
                    }
                });
                
                const totalInBillions = (totalRecords / 1000000000).toFixed(1);
                document.getElementById('breachCount').textContent = `${totalInBillions}B+`;
            }
        }
        
        // Функция для инициализации скролла
        function initScroll() {
            // Кнопка "Наверх"
            const scrollTopBtn = document.getElementById('scrollTop');
            
            window.addEventListener('scroll', () => {
                if (window.pageYOffset > 300) {
                    scrollTopBtn.classList.add('visible');
                } else {
                    scrollTopBtn.classList.remove('visible');
                }
            });
            
            // Прокрутка к верху страницы
            scrollTopBtn.addEventListener('click', scrollToTop);
        }
        
        // Функция для прокрутки к верху страницы
        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }
        
        // Вспомогательные функции
        
        // Проверка валидности email
        function isValidEmail(email) {
            const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return re.test(email);
        }
        
        // Проверка валидности IP
        function isValidIP(ip) {
            const re = /^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$/;
            return re.test(ip);
        }
        
        // Проверка валидности домена
        function isValidDomain(domain) {
            const re = /^(?!:\/\/)([a-zA-Z0-9-_]+\.)*[a-zA-Z0-9][a-zA-Z0-9-_]+\.[a-zA-Z]{2,}$/;
            return re.test(domain);
        }
        
        // Генерация случайной утечки
        function generateRandomBreach(type) {
            const breachesByType = {
                'email': [
                    { title: 'Collection #1-5 Leak', type: 'danger', details: 'Email найден в крупнейшей коллекции утечек', severity: 'Критическая', records: '2.2 млрд записей' },
